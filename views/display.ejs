    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/docs/5.3/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="mask-icon" href="/docs/5.3/assets/img/favicons/safari-pinned-tab.svg" color="#712cf9">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#712cf9">
    <style>
        body {
            background-color: #F4F4F3;
            color: #383838;
        }

        .text-body-secondary {
            color: #383838;
        }

        .btn-primary {
            background-color: #FFC700;
            border-color: #FFC700;
            color: #383838;
        }

        .btn-primary:hover {
            background-color: #383838;
            border-color: #383838;
            color: #FFC700;
        }

        .bg-body-tertiary {
            background-color: #F4F4F3;
        }

        .card {
            background-color: #F4F4F3;
            border: 1px solid #383838;
        }

        .card-body {
            color: #383838;
        }

        .btn-outline-secondary {
            border-color: #383838;
            color: #383838;
        }

        .btn-outline-secondary:hover {
            background-color: #383838;
            color: #FFC700;
        }

        .bd-placeholder-img {
            background-color: #F4F4F3;
            color: #383838;
        }

        .nav-scroller {
            background-color: #F4F4F3;
        }

        .nav a {
            color: #383838;
        }

        .nav a:hover {
            color: #FFC700;
        }

        .pdf-frame {
            border: 1px solid #ddd;
        }

        .pdf-preview {
            width: 100%;
            height: 500px;
            border: 1px solid #ccc;
            overflow: hidden;
        }
    </style>
</head>

<body>

    <%-include ("partials/header.ejs") %>


        <main>

            <section class="py-4 text-center container">
                <div class="row py-lg-3">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <% if (post.files && post.files.length> 0) { %>
                            <div id="carouselExampleIndicators" class="carousel slide custom-carousel"
                                data-bs-ride="carousel">

                                <!-- Indicators (render once) -->
                                <div class="carousel-indicators">
                                    <% post.files.forEach((file, index)=> { %>
                                        <button type="button" data-bs-target="#carouselExampleIndicators"
                                            data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"
                                            aria-current="<%= index === 0 ? 'true' : 'false' %>"
                                            aria-label="Slide <%= index + 1 %>"></button>
                                        <% }) %>
                                </div>

                                <!-- Slides -->
                                <div class="carousel-inner">
                                    <% post.files.forEach((file, index)=> {
                                        const fileType = file.split('.').pop().toLowerCase().split('?')[0];
                                        %>
                                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                            <% if (['jpg','jpeg','png','gif','bmp','webp','svg'].includes(fileType)) {
                                                %>
                                                <img src="<%= file %>" class="d-block w-100" alt="Image">
                                                <% } else if (fileType==='pdf' ) { %>

                                                    <div class="ratio ratio-16x9 pdf-preview">
                                                        <iframe class="pdf-frame"
                                                            src="<%= file %>#view=FitH&pagemode=none&toolbar=1"
                                                            title="PDF preview" loading="lazy"></iframe>
                                                    </div>
                                                    <div class="mt-2">
                                                        <a class="btn btn-outline-secondary btn-sm" href="<%= file %>"
                                                            target="_blank" rel="noopener">
                                                            Open PDF in new tab
                                                        </a>
                                                    </div>
                                                    <% } else if (['doc','docx'].includes(fileType)) { %>
                                                        <!-- Browsers can’t preview Word reliably; offer a download/open link -->
                                                        <p class="text-muted">
                                                            <a href="<%= file %>" target="_blank" rel="noopener">
                                                                Open <%= fileType.toUpperCase() %> file
                                                            </a>
                                                        </p>
                                                        <% } else { %>
                                                            <p class="text-muted">
                                                                Unsupported file — <a href="<%= file %>" target="_blank"
                                                                    rel="noopener">Download</a>
                                                            </p>
                                                            <% } %>
                                        </div>
                                        <% }) %>
                                </div>

                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <% } else { %>
                                <p>No files to display.</p>
                                <% } %>
                                    <p class="mt-3"><strong>Content:</strong>
                                        <%= post.content %>
                                    </p>
                    </div>
                </div>
            </section>


            <%- include("partials/footer.ejs") %>
        </main>



        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const themeToggleBtn = document.querySelector('#bd-theme');
                const dropdownItems = document.querySelectorAll('.dropdown-item');

                const html = document.querySelector('html');

                dropdownItems.forEach(item => {
                    item.addEventListener('click', () => {
                        // Remove active state from all dropdown items
                        dropdownItems.forEach(btn => {
                            btn.setAttribute('aria-pressed', 'false');
                            btn.classList.remove('active');
                            btn.querySelector('.ms-auto').classList.add('d-none');
                        });

                        // Add active state to the clicked dropdown item
                        item.setAttribute('aria-pressed', 'true');
                        item.classList.add('active');
                        item.querySelector('.ms-auto').classList.remove('d-none');

                        // Change the toggle button icon
                        const themeIconActive = themeToggleBtn.querySelector('.theme-icon-active use');
                        const selectedIconHref = item.querySelector('svg').firstElementChild.getAttribute('href');
                        themeIconActive.setAttribute('href', selectedIconHref);

                        // Update aria-label of the button
                        const themeValue = item.getAttribute('data-bs-theme-value');
                        themeToggleBtn.setAttribute('aria-label', `Toggle theme (${themeValue})`);

                        // Update the data-bs-theme attribute of body
                        html.setAttribute('data-bs-theme', themeValue)

                        updateBodyTheme(themeValue);
                    });
                });
                function updateBodyTheme(themeValue) {
                    document.body.classList.remove('theme-light', 'theme-dark', 'theme-auto');
                    document.body.classList.add(`theme-${themeValue}`);
                }
            });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>



</body>

</html>